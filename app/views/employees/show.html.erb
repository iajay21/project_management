<h2>Employee Detail</h2>

<p> Name: <%= @employee.name %></p>
<p> description: <%= @employee.description %></p>
<p> company_name: <%= @employee.company_name %></p>
<% if @projects.present? %>
	<p> projects: 
		<% @projects.each do |p| %>
			<h4><%= link_to p.name, project_path(p) %></h4>
		<% end %>
	</p>
<% end %>

<%= link_to "Back", employees_path %>

